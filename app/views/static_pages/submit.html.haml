.hero-unit
  %h1 Discuss It!
  %p Online article discussion tracker website for locating online discussions about a given article.
  .row-fluid
    .columnA.pull-center
      %h3 TOP RESULTS
      - if @results.empty?
        %p
          Sorry, no discussions found.
          = link_to 'Try again?', root_path
      - else
        - @results.each_pair do |k, v|
          %p
            = "#{k.to_s.upcase} :: "
            = link_to v[:title], v[:location] unless v.nil?
    .columnA.pull-center
      %h3 ALL RESULTS
      - if @all_results.empty?
        %p
          No additional results found
      - else
        - @all_results.each do |results|
          = link_to results, results

%hr
